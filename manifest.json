{
  "name": "Mindfulness",
  "description": "Track your mindfulness journey",
  "version": "1.01",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],
   "content_scripts": [
    {
        "matches": [
          "https://www.amazon.ca/checkout*", 
          "https://www.amazon.com/checkout*",
          "https://www.ebay.com/*",
          "*://*/checkout*", 
          "*://*/cart*"
          ],
        "js": ["utils.js", "chart.js", "content.js"],
        "css": ["style.css"]
    }
    ],

    "web_accessible_resources": [
    {
        "resources": ["utils.js", "chart.js", "content.js", "resources/siren.mp3"],
        "matches": ["<all_urls>"]
    }
    ],
  "action": {
    "default_icon": "resources/icon.png"
  },
    "options_ui": {
    "page": "home.html",
    "open_in_tab": true
  }   
}